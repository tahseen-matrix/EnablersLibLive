<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_8sdp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_plant_2"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/restaurantNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivImage"
            android:text="Pot Name"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cuisineTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantNameTextView"
            android:layout_toEndOf="@id/ivImage"
            android:layout_marginTop="4dp"
            android:text="Pot Type"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/priceRangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cuisineTypeTextView"
            android:layout_toEndOf="@id/ivImage"
            android:layout_marginStart="8dp"
            android:text="$$"
            android:textSize="14sp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>